<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_message_profile_received"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/item_message_received_circle"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        />

    <TextView
        android:id="@+id/text_message_name_received"
        android:text="John Doe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_toEndOf="@+id/image_message_profile_received"
        android:layout_marginEnd="8dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:layout_marginStart="5dp"
        />

    <TextView
        android:id="@+id/text_message_body_received"
        android:text="hi man, how are you?"
        android:background="@drawable/rounded_rectangle_navy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:textColor="#000000"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/text_message_name_received"
        android:layout_toEndOf="@+id/image_message_profile_received"
        android:layout_marginEnd="8dp"
        />

    <TextView
        android:id="@+id/text_message_time_received"
        android:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_toEndOf="@+id/text_message_body_received"
        android:layout_below="@+id/text_message_body_received"
        android:layout_marginTop="-7dp"
        android:layout_marginStart="-9dp"
        />

    <TextView
        android:id="@+id/text_message_body_sent"
        android:text="hello, hello!"
        android:background="@drawable/rounded_rectangle_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:textColor="#ffffff"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        />

    <TextView
        android:id="@+id/text_message_seen_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="seen"
        android:textColor="@color/colorDarkGrey"
        app:layout_constraintTop_toBottomOf="@+id/text_message_body_sent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="15dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/text_message_time_sent"
        android:text="11:40"
        android:textColor="@color/colorDarkGrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_below="@+id/text_message_body_sent"
        android:layout_toStartOf="@+id/text_message_body_sent"
        android:layout_marginTop="-7dp"
        android:layout_marginStart="-1dp"
        />

</RelativeLayout>