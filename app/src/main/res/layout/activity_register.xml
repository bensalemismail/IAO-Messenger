<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/bgstyle"
    android:id="@+id/coordinatorLayoutRegister"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/register_back_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_back_arrow2"/>

            <TextView
                android:id="@+id/registerlabel"
                android:layout_below="@id/register_back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Register"
                android:textColor="@color/colorBlue"
                android:textSize="50dp"
                android:fontFamily="@font/evolve"
                android:textStyle="bold"
                android:layout_marginTop="30dp"/>





            <android.support.design.widget.TextInputLayout
                android:id="@+id/register_fullname_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/registerlabel"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="80dp"
                android:hint="Full name"
                app:boxBackgroundColor="@color/aa"
                app:boxStrokeColor="#2F80ED"
                android:theme="@style/TextLabel"
                android:layout_marginTop="40dp">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/register_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:drawableStart="@drawable/ic_user_display_profile_image"
                    android:drawablePadding="7dp"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColor="@color/colorNavy"
                    />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/register_email_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_fullname_layout"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="80dp"
                android:hint="E-mail"
                app:boxBackgroundColor="@color/aa"
                app:boxStrokeColor="#2F80ED"
                android:theme="@style/TextLabel"
                >
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/register_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:drawableStart="@drawable/ic_email_icon"
                    android:drawablePadding="7dp"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColor="@color/colorNavy"
                    />
            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:id="@+id/register_password_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_email_layout"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="80dp"
                android:hint="Password"
                app:boxBackgroundColor="@color/aa"
                app:boxStrokeColor="#2F80ED"
                android:theme="@style/TextLabel"
                app:passwordToggleEnabled="true">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/register_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:drawableStart="@drawable/ic_password_icon"
                    android:drawablePadding="7dp"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:textColor="@color/colorNavy"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/register_repeat_password_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_password_layout"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="80dp"
                android:hint="Repeat Password"
                app:boxBackgroundColor="@color/aa"
                app:boxStrokeColor="#2F80ED"
                android:theme="@style/TextLabel"
                app:passwordToggleEnabled="true">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/register_repeat_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:drawableStart="@drawable/ic_password_icon"
                    android:drawablePadding="7dp"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:textColor="@color/colorNavy"
                    />
            </android.support.design.widget.TextInputLayout>





            <Button
                android:id="@+id/register_btn"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_repeat_password_layout"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="90dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/btnstyles"
                android:text="Create Account"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"

                />




            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_btn"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/need_login_1st_half"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="Not your first time here?"
                    android:textColor="@color/colorBlue"
                    android:textSize="15sp"
                    android:layout_marginEnd="5dp"
                    />

                <TextView
                    android:id="@+id/need_login_2nd_half"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/need_login_1st_half"
                    android:text="Log In."
                    android:textColor="@color/colorNavy"
                    android:textSize="17sp"
                    android:layout_marginTop="-2dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/lato"
                    android:textStyle="bold"
                    />




            </RelativeLayout>
        </RelativeLayout>



    </ScrollView>

</android.support.design.widget.CoordinatorLayout>