<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPasswordActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <android.support.v7.widget.Toolbar
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/main_app_bar"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/fleche"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/ic_back_arrow2" />

            </android.support.v7.widget.Toolbar>




            <ImageView
                android:id="@+id/lock"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:src="@drawable/lock1"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/main_app_bar"
                android:layout_marginTop="80dp"/>

            <TextView
                android:id="@+id/trouble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lock"
                android:text="@string/trouble"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textColor="#283E51"/>

            <TextView
                android:id="@+id/solution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/trouble"
                android:text="@string/solution"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/lato"
                />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/forgetpassword_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/solution"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="80dp"
                android:hint="E-mail"
                app:boxBackgroundColor="@color/aa"
                app:boxStrokeColor="#2F80ED"
                android:theme="@style/TextLabel"
                android:layout_marginTop="20dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/email2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:drawableStart="@drawable/ic_email_icon"
                    android:drawablePadding="7dp"
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:textColor="@color/colorNavy"
                    />
            </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/send_btn"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forgetpassword_layout"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="90dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btnstyles"
                android:text="SEND"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:fontFamily="@font/lato"
                />

            <RelativeLayout
                android:id="@+id/rl_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/send_btn"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/need_login_1st_half"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/evolve_light_font"
                    android:text="Need to create new account ?"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlue"
                    android:textSize="15sp"
                    android:layout_marginEnd="5dp"
                    />

                <TextView
                    android:id="@+id/linksignup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/need_login_1st_half"
                    android:text="sign up."
                    android:textColor="@color/colorNavy"
                    android:textSize="15sp"
                    android:layout_marginBottom="15dp"
                    android:textStyle="bold"
                    />


            </RelativeLayout>





        </RelativeLayout>















    </ScrollView>





</android.support.design.widget.CoordinatorLayout>